@import '../../plugins/wemark/wemark.wxss';
@import '../../assets/style/normal.wxss';

.p-post {
  padding: 10px 20px;
}

.w-post-header {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}

.w-post-action-msg {
  color: #acacac;
}

.w-post-action-thumb {
  margin-right: 15px;
}

.w-line-mark {
  margin-top: 30px;
  height: 3px;
  width: 30px;
  background-color: black;
}

.wemark_wrapper {
  margin: 15px 0;
}

.wemark_block_h1 {
  text-align: left;
}

.w-post-action-bar {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 60px;
  box-sizing: border-box;
  padding: 0 20px;
  background-color: white;
}

.w-post-action-btn {
  width: 50px;
  height: 24px;
  color: white;
  font-weight: lighter;
  font-size: 12px;
  line-height: 24px;  
}

.w-post-action-btn--left {
  width: 52px;
  border-right: 2px solid #12cd88;
}

button {
  border-radius: 0;
  outline: none;
  border: 0;
  margin: 0;
  padding: 0 5px;
  text-align: right;
  background-color: #15ffa9;
}

button::after {
  border: 0;
}